{% block contenu %}

<section class="title">
        <div class="container">
            <div class="row-fluid">
                <div class="span6">
                    <h1>Finaliser votre paiement</h1>
                </div>
                <div class="span6">
                    <ul class="breadcrumb pull-right">
                        <li><a href="index.html">Home</a> <span class="divider">/</span></li>
                        <li><a href="#">Pages</a> <span class="divider">/</span></li>
                        <li class="active">nouveau paiement</li>
                    </ul>
                </div>
            </div>
        </div>
</section>
<!-- / .title --> 

<section id="terms-use" class="container" style="background-color: white">
    <div class="row-fluid">
        <div class="span4">
            <h1 class="in_progress">1</h1>
        </div>
        <div class="span4">
            <h1>2</h1>
        </div>
        <div class="span3">
            <h1>3</h1>
        </div>
        
    </div>

    <div class="row-fluid" id="infos_generales">
        <hr>
        <div class="span5 onglet_destination">
            <h4>Choisissez votre mode de paiement</h4>
            
                <h1><i>Block de paiement carte bancaire à intégrer</i></h1>
                
        </div>

        <div class="span4 offset1 onglet_service">
            <h4>Récapitulatif</h4>
                <div>
                    <p><strong>Pays : </strong> {{ paiement.paysDestination.nom }} </p>
                    <p><strong>Etablissement : </strong> {{ paiement.etablissements.nom }} </p>
                    <p><strong>Service : </strong> {{ paiement.service.nom }} </p>
                </div>
              
        </div>
      
    </div>
    <!-- fin info générales -->

        
</section>
