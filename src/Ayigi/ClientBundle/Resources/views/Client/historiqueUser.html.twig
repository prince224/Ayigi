{% block contenu %}

<section class="title">
        <div class="container">
            <div class="row-fluid">
                <div class="span6">
                    <h1>Historique utilisateur</h1>
                </div>
                <div class="span6">
                    <ul class="breadcrumb pull-right">
                        <li><a href="index.html">Home</a> <span class="divider">/</span></li>
