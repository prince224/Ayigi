                    </ul>
                </div>
            </div>
        </div>
</section>
<!-- / .title --> 

<section id="terms-use" class="container">
{% if paiements is defined %}
    {% if paiements is not empty %}
        <section>
            <h3 class="span5">Liste des transactions effectu√©es </h3>

            <h4 class="span3 offset3" id="new-transaction">
                <a href="{{ path('ayigi_client_paiement_user', {'idClient' : client.id })}} ">Nouvelle transaction</a>
            </h4>
            <hr>
        </section>
        
        <div class="table-responsive" id="liste_paiement">

            <table class="table table-striped">

                <thead>

                    <th>Date</th>
                    <th>Service</th>
                    <th>Etablissement</th>
                    <th>Montant</th>
                    <th>Beneficiaire</th>
                    <th>Message</th>
                    <th>Statut</th>
                </thead>

                <tbody>
                {% for p in paiements %}
                    <tr>
                        <td> {{ p.datepaiement|date('d/m/Y') }} </td>
                        <td> {{ p.service.nom }} </td>
                        <td> {{ p.etablissements.nom }} </td>
                        <td> {{ p.montant }} </td>
                        <td> {{ p.nom }} <br/> {{ p.prenom }} </td>
                        <td> {{ p.message }} </td>
                        {% if p.etat %}
                            <td> Paiement OK </td>
                        {% else %}
                            <td>
                                <a href="{{ path('ayigi_client_reprise_paiement_user', {'idPaiement' : p.id })}} ">
                                    Finaliser l'envoi ? 
                                </a> 
                            </td>
                        {% endif %}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    {% endif %}
{% endif %}

</section>
